export LC_ALL=
NEEDED=

if [ ! -f tools.mak ]
then
	echo "You must run me in ./extras/tools !"
	exit 1
fi

check() {
# FIXME : add version check
if ! $1 --version >/dev/null 2>&1
then
    echo "$1 not found"
    NEEDED="$NEEDED .$1"
fi
}

check autoconf
check automake
check libtool
check pkg-config
check xz
check cmake

[ -n "$NEEDED" ] && mkdir -p build/

CPUS=
case `uname` in
    Linux)
        CPUS=`grep -c ^processor /proc/cpuinfo`
     ;;
    Darwin)
        CPUS=`sysctl hw.ncpu|cut -d: -f2`
    ;;
    *)
        CPUS=1  # default
     ;;
esac


cat > Makefile << EOF
MAKEFLAGS += -j$CPUS
PREFIX=\$(abspath ./build)

all: $NEEDED
	@echo "You are ready to build VLC and its contribs"

automake: .autoconf

include tools.mak
EOF
